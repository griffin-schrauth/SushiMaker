@page
@model WebApp.Pages.SushiModel
@{
}
<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our great selection of Sushi</h1>
        <h4>Choose one, or try our sushi builder! then order and done</h4>
        <h4>No need to give any of your details</h4>
        <h4>We already know everything</h4>
        <p class="smallText"><i>Only one sushi roll per order</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="~/images/Sushi/Create.jpg" class="w-100"/>
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left;">Create your own Sushi</h3>
                            <p style="text-align: left;">Make your own Sushi with our Sushi maker</p>
                            <a class="btn btn-primary" style="float: left" asp-area="" asp-page="Forms/CustomSushi">Try now</a>
                        </div>
                    </div>
                </div>
            </div>

            @foreach (var sushi in Model.fakeSushiDB)
            {

                var imagePath = "~/images/Sushi/" + (sushi.ImageTitle + ".jpg");
                <div class="col-4 mb-5 ">
                    <a class="sushi-img " asp-area="" asp-page="Checkout/Checkout" 
                    asp-route-ImageTitle="@sushi.ImageTitle" 
                    asp-route-SushiPrice="@sushi.FinalPrice">
                    <img src="@imagePath" class=" fixImage" asp-append-version="true"/>
                    <h1>@sushi.ImageTitle</h1>
                    </a>
                    <br/>
                    
                 </div>
                 
            }
                       
        </div>
    </div>
</div>